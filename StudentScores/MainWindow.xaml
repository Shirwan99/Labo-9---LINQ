<Window x:Class="StudentScores.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Grades" Height="400" Width="600">
    <StackPanel Margin="10">
        <WrapPanel>
            <Button Content="Toon alle studenten" Margin="5" Click="ShowStudents_Click"/>
            <Button Content="Studenten geslaagd (>12)" Margin="5" Click="GeslaagdeStudenten_Click"/>
            <Button Content="Gesorteerd op voornaam" Margin="5" Click="SortedByFirstName_Click"/>
            <Button Content="Aantal per departement" Margin="5" Click="StudentsGroupedByDepartment_Click"/>
            <Button Content="Samenvatting" Margin="5" Click="Button_Click"/>
            <Button Content="Aantal departementen" Margin="5" Click="CountDepartements_Click"/>
        </WrapPanel>
        <ListBox Name="resultListBox" Height="250" Margin="5"/>
    </StackPanel>
</Window>
